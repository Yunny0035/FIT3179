{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Sum of net generation by region",
  "width": 800,
  "height": 800,
  "params": [
    {
      "name": "region_param",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "North America",            
          "Africa",
          "Europe",
          "Asia & Oceania",
          "Middle East",
          "Central & South America"
        ],
        "name": "Region Filter"
      },
      "value": "All"
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/Yunny0035/FIT3179/main/A2/data/Global%20Electricity%20Statistics.csv"
  },
  "transform": [
    {"filter": "datum.Region === region_param || region_param === 'All'"}
  ],
  "encoding": {
    "y": {
      "field": "Region",
      "type": "nominal",
      "sort": "-x"
    },
    "x": {
      "aggregate": "sum",
      "field": "1980",
      "title": "Sum of net generation"
    }
  },
  "layer": [
    {
      "mark": "bar"
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5
      },
      "encoding": {
        "x": {
          "field": "1980",
          "type": "quantitative"
        },
        "text": {
          "aggregate": "sum",
          "field": "1980",
          "type": "quantitative"
        }
      }
    }
  ]
}