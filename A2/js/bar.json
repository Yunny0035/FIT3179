{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 800,
  "params": [
    {
      "name": "region_param",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "North-America",            
          "Africa",
          "Europe",
          "Asia & Oceania",
          "Middle East",
          "Eurasia",
          "Central & South America"
        ],
        "name": "Region Filter"
      },
      "value": "All"
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/Yunny0035/FIT3179/main/A2/data/Global%20Electricity%20Statistics1.csv"
  },
  "transform": [
    {"filter": "datum.Region === region_param || region_param === 'All'"}
  ],
  "encoding": {
    "y": {
      "field": "Region",
      "type": "nominal"
    },
    "tooltip": [
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "X1980", "type": "quantitative", "title": "X1980"}
    ]
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "X1980",
          "type": "quantitative"
        }
      }
    }
  ]
}